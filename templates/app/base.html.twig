<!doctype html>

{% set route = app.request.attributes.get('_route')|default(null) %}
{% set route_params = app.request.attributes.get('_route_params')|default({}) %}
{% if not on_app_page is defined %}
    {% set on_app_page = route and route matches '/^app_(code|card|about)/' %}
{% endif %}
<html lang="en">
    <head>
        <title>{{ get_configuration('pwa_app_name') }}</title>

        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="description" content="{{ get_configuration('pwa_app_name') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="theme-color" content="#003764">

        {{ encore_entry_link_tags('webapp') }}

        {% if on_app_page %}
            <!-- iOS webapp tricks -->
            {% if is_ios() %}
                <meta name="apple-mobile-web-app-title" content="{{ get_configuration('pwa_app_short_name') }}">
                <meta name="apple-mobile-web-app-capable" content="yes">
                <meta name="apple-mobile-web-app-status-bar-style" content="default">
                <link rel="apple-touch-icon" href="{{ asset(app_icon(512)) }}">
                {% for size in [152, 167, 180] %}
                    <link rel="apple-touch-icon" sizes="{{ size }}x{{ size }}" href="{{ asset(app_icon(size)) }}">
                {% endfor %}
                <link rel="apple-touch-startup-image" media="(device-width: 375px)" href="{{ asset('build/images/splashscreen.png') }}">
                <link rel="apple-touch-startup-image" media="(device-width: 375px) and (-webkit-device-pixel-ratio: 2)" href="{{ asset('build/images/splashscreen@2x.png') }}">
            {% endif %}

            <!-- Webapp manifest -->
            {% if guest|default(null) %}
                <link rel="manifest" href="{{ path('app_manifest', {guest: guest.id}) }}">
            {% endif %}
        {% endif %}
    </head>
    <body>
        {% block body %}
            <div class="wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            {% block content %}{% endblock %}
                        </div>
                    </div>
                </div>

                {% set route = app.request.attributes.get('_route')|default(null) %}
                {% set route_params = app.request.attributes.get('_route_params')|default({}) %}

                {% if on_app_page %}
                    <nav class="navbar navbar-expand navbar-light bg-light fixed-bottom justify-content-center">
                        <div class="nav navbar-nav w-100 row justify-content-evenly">
                            <a class="nav-item nav-link col {{ route == 'app_code' ? 'active' }}" href="{{ path('app_code', route_params) }}"><i class="fa-solid fa-lock-open fa-fw"></i><span>{{ 'Code'|trans }}</span></a>
                            <a class="nav-item nav-link col {{ route == 'app_card' ? 'active' }}" href="{{ path('app_card', route_params) }}"><i class="fa-solid fa-id-card fa-fw"></i><span>{{ 'Card'|trans }}</span></a>
                            <a class="nav-item nav-link col {{ route == 'app_about' ? 'active' }}" href="{{ path('app_about', route_params) }}"><i class="fa-solid fa-info-circle fa-fw"></i><span>{{ 'About'|trans }}</span></a>
                        </div>
                    </nav>
                {% endif %}
            </div>

            {{ encore_entry_script_tags('webapp') }}

            {% if on_app_page %}
                {# Register serviceworker #}
                <script>
                    if('serviceWorker' in navigator) {
                        if (navigator.serviceWorker.controller) {
                            console.log('Active service worker found, no need to register')
                        } else {
                            //Register the ServiceWorker
                            navigator.serviceWorker.register({{ path('app_serviceworker', route_params|merge({v: version}))|json_encode|raw }}).then(function(reg) {
                                console.log('Service worker has been registered for scope:'+ reg.scope);
                            });
                        }
                    }
                </script>

                <!-- iOS webapp tricks -->
                {% if is_ios() %}
                  <script>
                    document.addEventListener("DOMContentLoaded", () => {
                      addToHomescreen();
                    });
                  </script>
                {% endif %}
            {% endif %}

            {% block body_javascript %}{% endblock %}
        {% endblock %}
    </body>
</html>
