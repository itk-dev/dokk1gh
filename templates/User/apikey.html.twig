{% extends 'admin/layout.html.twig' %}

{% block page %}
  {{ parent() }}
{% endblock %}

{% block main %}
  <div class="container">
    <div class="row">
      <div class="panel">
        <div class="panel-heading">
          <h1>{{ 'API key'|trans }}</h1>
        </div>

        <div class="panel-body">
          <form method="post">

            {% if user.apiKey %}
              <div class="form-group">
                <div class="input-group">
                  <input class="form-control" type="text" readonly value="{{ user.apiKey }}"/>
                  <span class="input-group-btn">
                    <button type="button" class="btn btn-default" data-clipboard-text="{{ user.apiKey }}" data-clipboard-success="{{ 'API key copied to clipboard'|trans }}"><span class="fa fa-clipboard"></span></button>
                  </span>
                </div>
              </div>

              <div class="form-group">
                {% set label = 'Generate new API key'|trans %}

                <div class="form-group d-grid">
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirm-modal">{{ label }}</button>
                </div>

                <div class="modal fade" id="confirm-modal" tabindex="-1">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">{{ label }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Close'|trans }}"></button>
                      </div>
                      <div class="modal-body">
                        <p>{{ 'Confirm generate new API key'|trans }}</p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Cancel'|trans }}</button>
                        <button type="submit" class="btn btn-primary">{{ label }}</button>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            {% else %}
              <div class="alert alert-info">{{ 'You do not yet have an API key'|trans }}</div>
              <div class="form-group d-grid">
                <button type="submit" class="btn btn-primary">{{ 'Generate API key'|trans }}</button>
              </div>
            {% endif %}
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block hest_body_javascript %}
  <script src="{{ asset('javascripts/clipboard.min.js') }}"></script>
  <script>(function($) {
      var selector = '[data-clipboard-text]',
          clipboard = new Clipboard(selector);

      $(selector).popover({
        trigger: 'manual',
        container: 'body',
        placement: 'left'
      });

      clipboard.on('success', function(e) {
        $(e.trigger).popover('show');
        setTimeout(function () {
          $(e.trigger).popover('hide');
        }, 1000);
      });

      $('.form-control').on('focus', function () {
        $(this).select();
      });
    }(jQuery))</script>
{% endblock %}
