{% if value %}
    {% include 'easy_admin/datetime.html.twig' %}
{% else %}
    {% set action_href = path('easyadmin', app.request.query.all|merge({ action: 'sendApp', id: item.id })) %}
    <form method="post" action="{{ action_href }}">
    {% if item.sentAt|default(false) %}
        <button type="submit" class="btn btn-default"
            data-toggle="tooltip" data-placement="bottom"
            title="{{ 'App sent at %sent_at%'|trans({'%sent_at%': item.sentAt|date(format_datetime|default('Y-m-d H:i:s'))}) }}">{{ 'Resend app'|trans }}</button>
    {% else %}
        <button type="submit" class="btn btn-default">{{ 'Send app'|trans }}</button>
    {% endif %}
    </form>
{% endif %}
